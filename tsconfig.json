{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    // "types": ["svelte", "node"],
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"]
}
